# ------------------------------------------------------------------------------
# .exports - Environment Variables
#
# Note: Sensitive values (API keys, tokens) should go in ~/.extra (not committed)
# ------------------------------------------------------------------------------

# ------------------------------------------------------------------------------
# Editor
# ------------------------------------------------------------------------------
export EDITOR="code --wait"
export VISUAL="$EDITOR"
export GIT_EDITOR="$EDITOR"

# ------------------------------------------------------------------------------
# Language & Locale
# ------------------------------------------------------------------------------
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

# ------------------------------------------------------------------------------
# History
# ------------------------------------------------------------------------------
export HISTSIZE=50000
export SAVEHIST=50000
export HISTCONTROL="ignoreboth:erasedups"

# ------------------------------------------------------------------------------
# Pager
# ------------------------------------------------------------------------------
export PAGER="less"
export LESS="-R -F -X"  # Raw colors, quit if fits, no init

# Use bat as man pager if available
if command -v bat &>/dev/null; then
    export MANPAGER="sh -c 'col -bx | bat -l man -p'"
fi

# ------------------------------------------------------------------------------
# Homebrew
# ------------------------------------------------------------------------------
export HOMEBREW_NO_ANALYTICS=1
export HOMEBREW_NO_AUTO_UPDATE=1  # Manual updates only

# ------------------------------------------------------------------------------
# Node.js / NVM
# ------------------------------------------------------------------------------
export NVM_DIR="$HOME/.nvm"
# NVM is lazy-loaded in .zshrc for faster shell startup

# ------------------------------------------------------------------------------
# Python
# ------------------------------------------------------------------------------
# Prevent Python from writing .pyc files
export PYTHONDONTWRITEBYTECODE=1

# UV (Python package manager)
export UV_CACHE_DIR="$HOME/.cache/uv"

# ------------------------------------------------------------------------------
# Development
# ------------------------------------------------------------------------------
# Make development servers visible on local network
export HOST="0.0.0.0"

# Default Node.js server port
export PORT=3000

# ------------------------------------------------------------------------------
# Cloudflare
# ------------------------------------------------------------------------------
# Wrangler settings
export WRANGLER_SEND_METRICS=false

# API tokens should be in ~/.extra:
# export CLOUDFLARE_API_TOKEN="your-token"
# export CLOUDFLARE_ACCOUNT_ID="your-account-id"

# ------------------------------------------------------------------------------
# Claude
# ------------------------------------------------------------------------------
# API key should be in ~/.extra:
# export ANTHROPIC_API_KEY="your-key"

# ------------------------------------------------------------------------------
# FZF (Fuzzy Finder)
# ------------------------------------------------------------------------------
export FZF_DEFAULT_OPTS="
  --height 40%
  --layout=reverse
  --border
  --inline-info
  --color=fg:-1,bg:-1,hl:#c678dd
  --color=fg+:#ffffff,bg+:#4b5263,hl+:#d858fe
  --color=info:#98c379,prompt:#61afef,pointer:#be5046
  --color=marker:#e5c07b,spinner:#61afef,header:#61afef
"

# ------------------------------------------------------------------------------
# Ripgrep
# ------------------------------------------------------------------------------
export RIPGREP_CONFIG_PATH="$HOME/.ripgreprc"

# ------------------------------------------------------------------------------
# GPG (if using GPG instead of SSH for signing)
# ------------------------------------------------------------------------------
# export GPG_TTY=$(tty)

# ------------------------------------------------------------------------------
# Work-specific (loaded from ~/.extra if WORK_HOST is set)
# ------------------------------------------------------------------------------
# See ~/.extra for WORK_HOST configuration
