# Stable wget configuration for better reliability
# Minimal, safe configuration to prevent crashes

# Basic options for stability
timeout = 60
tries = 3
retry_connrefused = on
continue = on

# Output and progress
progress = bar
show_progress = on

# Network settings for stability
inet4_only = off
inet6_only = off
prefer_family = IPv4

# Safety options
restrict_file_names = unix
check_certificate = on
ca_directory = /etc/ssl/certs

# User agent
user_agent = wget/1.25.0

# Prevent server overload
wait = 1
random_wait = on
waitretry = 10

# Robots.txt compliance
robots = on

# Safe directory creation
force_directories = on